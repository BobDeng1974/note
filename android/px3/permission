#define AID_ROOT             0  /* traditional unix root user */
#define AID_SYSTEM        1000  /* system server */

android_ids[] = {
    { "root",          AID_ROOT, },
    { "system",        AID_SYSTEM, },
    { "media_rw",      AID_MEDIA_RW, },
}
